#!/bin/bash

pkill -x rofi

MODE=$1

# Map modes to commands and text
case $MODE in
    run)
        TITLE="Run Command"
        MSG="Type a command to execute."
	CMD=(rofi -show run)
        ;;
    game)
        TITLE="Game Mode"
        MSG="Select an app with Gamemode."
        CMD=(gamemoderun rofi -show drun)
        ;;
    drun)
        TITLE="Select App"
        MSG="Select an app to run."
	CMD=(rofi -show drun -show-icons)
        ;;
esac

"${CMD[@]}" &
makenotif rofi system-run "$TITLE" "$MSG" true
